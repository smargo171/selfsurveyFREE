<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="0dip"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="60dp">

    <!-- android:background="?android:attr/activatedBackgroundIndicator"-->
<!-- android:background="@drawable/customselector"-->
    <!-- android:background="@drawable/listselector"-->
    <!-- android:background="?android:attr/activatedBackgroundIndicator""-->

    <!-- Title Of Query Set-->
    <TextView
            android:id="@+id/set_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/query_set_name_const"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="65dp"
        android:layout_marginRight="20dp"
            android:maxLines="3"
            android:layout_alignParentStart="true"
            />

    <!-- Number of Questions Var-->
    <TextView
    android:id="@+id/questions_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="15"
        android:layout_below="@id/set_name"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="3dp"
    android:textColor="@android:color/black"
        android:textStyle="bold" />


    <!-- Number of Questions -->
    <TextView
            android:id="@+id/questions_constant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions_constant"
            android:layout_below="@id/set_name"
            android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/questions_counter"
        android:layout_marginLeft="10dp"
        />


    <TextView
            android:id="@+id/first_question_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_question_dots"
            android:textSize="15sp"
            android:layout_below="@+id/set_name"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="65dp" />

    <!-- Rightend Arrow -->
    <!--android:src="@drawable/ic_action_next_item"-->
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/Arrow"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:contentDescription="Go to Set"
               android:layout_alignParentEnd="false"
               android:layout_centerVertical="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/lastDate"
        android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="15sp"

        android:layout_below="@id/questions_counter" />

    <ImageView android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/drawable_image_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>